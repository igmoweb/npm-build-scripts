{
  "name": "npm-scripts",
  "version": "1.0.0",
  "description": "npm as build tool",
  "main": "index.js",
  "config": {
    "port": "5000"
  },
  "scripts": {
    "start": "node index.js",
    "poststart": "npm-run-all -s build server",
    "server": "npm-run-all --parallel server:*",
    "server:create": "cross-var http-server dist/$npm_package_version -p $npm_package_config_port",
    "server:launch": "cross-var opn http://localhost:$npm_package_config_port",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "npm run test -- --watch",
    "watch:lint": "onchange **/*.js **/*.scss -- npm run lint",
    "pretest": "npm run lint",
    "test": "cross-env BABEL_ENV=test mocha ./tests --require babel-register",
    "coverage": "nyc --reporter=html npm run test",
    "postcoverage": "rimraf .nyc_output",
    "coverage:open": "opn coverage/index.html",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --env mocha --cache --fix ./",
    "lint:style": "stylelint **/*.scss --syntax scss",
    "prebuild": "cross-var rimraf ./dist/$npm_package_version",
    "build": "npm-run-all -s build:*",
    "build:html": "cross-var pug --obj data.json src/index.pug --out dist/$npm_package_version/",
    "build:css": "cross-var \"node-sass scss/style.scss | cssmin > dist/$npm_package_version/style.css\"",
    "build:js": "cross-var \"mustache data.json src/index.mustache | uglifyjs > dist/$npm_package_version/index.js\"",
    "prepush": "npm run lint"
  },
  "author": "Ignacio Cruz <igmoweb@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "http-server": "^0.11.1",
    "npm-run-all": "^4.1.3"
  },
  "devDependencies": {
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "cssmin": "^0.4.3",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "mustache": "^2.3.0",
    "node-sass": "^4.9.2",
    "nyc": "^12.0.2",
    "onchange": "^4.1.0",
    "opn-cli": "^3.1.0",
    "postcss-cli": "^6.0.0",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "uglify-js": "^3.4.5"
  }
}
